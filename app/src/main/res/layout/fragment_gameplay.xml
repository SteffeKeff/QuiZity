<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/gameplay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_red"
    android:tag="@string/gamePlay">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/placeHolderCity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45dp"
        android:typeface="serif"/>
<LinearLayout
    android:layout_above="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/linearLayout2"
    >
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="200dp"
        android:src="@drawable/frame"
        android:background="@color/play_imagebutton_background_yellow"
        android:scaleType="fitXY"
        android:layout_below="@+id/timer"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:maxHeight="100dp"
        android:maxWidth="200dp"
        android:src="@drawable/frame"
        android:background="@color/play_imagebutton_background_yellow"
        android:onClick="buttonAnswer"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        >
    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton1"
        android:adjustViewBounds="true"
        android:src="@drawable/frame"
        android:background="@color/play_imagebutton_background_yellow"
        android:maxHeight="100dp"
        android:maxWidth="200dp"
        android:onClick="buttonAnswer"
        android:scaleType="fitXY"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="200dp"
        android:src="@drawable/frame"
        android:background="@color/play_imagebutton_background_yellow"
        android:onClick="buttonAnswer"
        android:scaleType="fitXY"
        android:layout_weight="1"/>
    </LinearLayout>


    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/round"
        android:id="@+id/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score"
        android:id="@+id/score"
        android:layout_below="@+id/round"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/total_time"
        android:id="@+id/total_time"
        android:layout_below="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>